{
    "compilerOptions": 
    {
        "target": "es6",
        "module": "CommonJS",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "strictNullChecks": true,
       
        "lib": [
            "dom",
            "es2017",
            "es2015.proxy",
            "dom.iterable"
          ]
    }, 
    "include": ["src/**/**/*.ts", "types/*.ts"],
    "ts-node": {
        "transpileOnly": true
    }
    
}
